               FontSize="16"
               HorizontalOptions="Center"
               VerticalOptions="CenterAndExpand"/>
        
        <Grid RowDefinitions="Auto"
              ColumnDefinitions="*, *, *" 
              VerticalOptions="CenterAndExpand"
              Margin="0,20,0,0">

            <Image Source="https://cdn.beahero.gg/2020/07/Rocket-League.jpg"
                   Grid.Row="0"
                   Grid.Column="0"
                   WidthRequest="200"
                   HeightRequest="100"
