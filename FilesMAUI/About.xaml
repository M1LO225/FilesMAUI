<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FilesMAUI.About"
             Title="About">
    <VerticalStackLayout>
        <Image
            Source="https://images7.memedroid.com/images/UPLOADED887/662bb471f120e.jpeg"
            HeightRequest="185"
            Aspect="AspectFit"/>
        <Label 
