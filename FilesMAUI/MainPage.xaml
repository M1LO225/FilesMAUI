<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FilesMAUI.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Image
                Source="https://i.pinimg.com/originals/a0/f6/d8/a0f6d8722e2ca13e433591c68bc5401f.jpg"
                HeightRequest="185"
                Aspect="AspectFit"
                SemanticProperties.Description="dot net bot in a race car number eight" />

            <Label
                x:Name="Label_id"
                Text="{Binding Id}"/>
            <Label
                x:Name="Label_nombre"
                Text="{Binding Nombre}"/>
            <Label
                x:Name="Label_carrera"
                Text="{Binding Carrera}"/>
            <Button
                x:Name="GuardaEstudiante"
                Text="GuardarEstudiante"
                Clicked="GuardaEstudiante_Clicked"/>


        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
